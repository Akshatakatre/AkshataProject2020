<Window x:Class="WPFRegistrtionForm.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPFRegistrtionForm"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <StackPanel HorizontalAlignment="Left" Height="388" Margin="29,22,0,0" VerticalAlignment="Top" Width="723" RenderTransformOrigin="0.5,0.5">
            <Button x:Name = "button" Content = "Button" Margin = "10" Width = "120" Height = "30" />
            <Button x:Name = "button1" Content = "Button" Margin = "10" Width = "120" Height = "30" />
            <Button x:Name = "button2" Content = "Button" Margin = "10" Width = "120" Height = "30" />
            <Button x:Name = "button3" Content = "Button" Margin = "10" Width = "120" Height = "30" />

            <StackPanel.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform AngleX="0.909"/>
                    <RotateTransform/>
                    <TranslateTransform X="-0.793"/>
                </TransformGroup>
            </StackPanel.RenderTransform>
        </StackPanel>

    </Grid>
</Window>
